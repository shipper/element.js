doctype html
html( ng-app="ngElement" ng-controller='AppCtrl' )
   head
      base( href="/" )
      title Element.JS

      link( rel='icon' type='image/icon' href='/assets/favicon.ico?v=1' )

   body( layout="column" )
      md-toolbar.md-whiteframe-z2( layout="row" md-scroll-shrink)
         .md-toolbar-tools
            #back-wrapper( ng-click="goBack()" )
              #back( ng-show="!!back" ) &nbsp;
            a( href="#/home" ) Element.JS
            span( ng-show="!!title" ) &nbsp;&nbsp;|&nbsp;&nbsp;{{ title }}

         .md-toolbar-tools( layout-align="end center" ng-show="!!Session.token" )
            md-button.md-raised.md-primary( ng-click="project" ) {{ library || 'Project' }}
            | &nbsp;
            md-button.md-raised( ng-href="#/settings" ) Settings

      section( layout="row" flex )
        md-sidenav.md-sidenav-left.md-whiteframe-z2( md-component-id="left" md-is-locked-open="isLeftSideNavOpen()" )
          md-content.md-primary
            md-list
              md-item
                md-item-content
                  .md-tile-content(ng-click="goto( 'home' )") Types
              md-divider
              md-item
                md-item-content
                  .md-tile-content(ng-click="goto( 'resources' )") Resources
              md-divider
              md-item
                md-item-content
                  .md-tile-content(ng-click="goto( 'logout' )") Logout


        md-content.md-padding( flex )
           ng-view